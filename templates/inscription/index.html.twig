<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Inscription{% endblock %}</title>
    <link rel="stylesheet" href="{{asset('assets/css/sign.css')}}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
  {% block body %}
    <section class="vh-100">
        <div class="container-fluid vh-100">
            <div class="row">
                <div class="col-6" id="left-side">
                    <svg width="700" height="500">
                        <image xlink:href="{{asset('assets/img/sign-up-animate.svg')}}" width="700" height="500" />
                    </svg>
                </div>
                <div class="col-6">
                    <div class="bg-light rounded" id="sign-div">
                        <h1 class="d-flex justify-content-center">S'inscrire</h1>
                        <p class="d-flex justify-content-center mb-3">Inscrivez-vous gratuitement pour accéder à nos services</p>
                        
                        <div class="mx-1">
                            
                            <div class="container">
                                {{form_start(form)}}
                                <div class="row">
                                    
                                    <div class="form-floating mb-2 col-6">
                                        {{form_row(form.nom)}}
                                    </div>
                                    <div class="form-floating mb-2 col-6">
                                        {{form_row(form.prenom)}}
                                    </div>
                                    <div class="form-floating mb-2 col-12">
                                        {{form_row(form.email)}}
                                    </div>
                                    <div class="form-floating mb-2 col-6">
                                        {{form_row(form.password.first)}}
                                    </div>
                                    <div class="form-floating mb-2 col-6">
                                        {{form_row(form.password.second)}}
                                    </div>
                                    <div class="mt-2 px-4 d-flex justify-content-between" id="btm">
                                        <a href="{{path('connexion')}}">se connecter ?</a>
                                        {{form_row(form.save)}}
                                    </div>
                                    
                                </div>
                                {{form_end(form)}}
                            </div>
                            
                            
                        </div>
                        
                    </div>

                    <div class="social d-flex justify-content-between">
                        <div class="col-12 ">
                            <ul class="list-unstyled social">
                                <li><a href="#"><span class="fa-brands fa-facebook"></span></a></li>
                                <li><a href="#"><span class="fa-brands fa-twitter"></span></a></li>
                                <li><a href="#"><span class="fa-brands fa-instagram"></span></a></li>
                                <li><a href="#"><span class="fa-brands fa-linkedin"></span></a></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </section>
    {% endblock  %}
</body>
</html>